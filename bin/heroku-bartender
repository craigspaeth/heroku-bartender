#!/usr/bin/env ruby
$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'

require 'heroku/bartender'
require 'choice'

Choice.options do
  banner "Usage: #{File.basename(__FILE__)} [-hptv]"
  header ''
  header 'Server options:'

  option :host do
    d = "0.0.0.0"
    short '-h'
    long '--host=HOST'
    desc "The hostname or ip of the host to bind to (default #{d})"
    default d
  end

  option :port do
    d = 4567
    short '-p'
    long '--port=PORT'
    desc "The port to listen on (default #{d})"
    cast Integer
    default d
  end
  
  option :user do
    d = nil
    long '--user=USER'
    desc "The user to login using HTTP Basic Auth"
    default d
  end
  
  option :password  do
    d = nil
    long '--password=PASSWORD'
    desc "The password to login using HTTP Basic Auth"
  end

  separator ''
  separator 'Common options: '

  option :target do
    d = "heroku"
    short '-t'
    long '--target=TARGET'
    desc "The target is the git remote in which you want to deploy (default #{d})"
    default d
  end
  
  option :commits_per_page do
    d = 20
    long '--commits-per-page'
    desc "The maximun number of commits that you want to see in each page (default #{d})"
    default d
  end
  
  option :help do
    long '--help'
    desc 'Show this message'
  end

  option :version do
    short '-v'
    long '--version'
    desc 'Show version'
    action do
      puts "#{File.basename(__FILE__)} v#{Heroku::Bartender::VERSION}"
      exit
    end
  end
end

options = Choice.choices

Heroku::Bartender::Server.start(options)

