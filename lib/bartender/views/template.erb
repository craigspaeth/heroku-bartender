<!DOCTYPE html>
<html>
  <head>
    <title>Bartender</title>
  </head>
  <body>
    <div class="site">
      <div id="home">
        <ul class="posts">
          <% commits.each do |commit| %>
          <li>
            <strong> <%= commit.author %> | <%= commit.email %></strong>
            <form method="POST">
              <input type="hidden" value="<%= commit.sha %>" name="sha"/>
              <input type="submit" value="Build"/>
            </form>
            <%= commit.sha %> 
            <%= commit.message %>
            <%= commit.date %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </body>
</html>
